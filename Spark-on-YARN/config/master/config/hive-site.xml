<!-- Hive-site.xml for Master (HMS) -->
<configuration>

  <!-- MySQL Metastore Backend -->
  <property>
    <name>javax.jdo.option.ConnectionURL</name>
    <value>jdbc:mysql://mysql:3306/metastore_db?createDatabaseIfNotExist=true&amp;useSSL=false</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionDriverName</name>
    <value>com.mysql.cj.jdbc.Driver</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionUserName</name>
    <value>hiveuser</value>
  </property>
  <property>
    <name>javax.jdo.option.ConnectionPassword</name>
    <value>hivepw</value>
  </property>

  <!-- Tự động tạo schema lần đầu -->
  <property>
    <name>datanucleus.schema.autoCreateAll</name>
    <value>true</value>
  </property>

  <!-- Thư mục Hive Warehouse trên HDFS -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>/user/hive/warehouse</value>
  </property>

  <!-- Kích hoạt Metastore service (HMS) -->
  <property>
    <name>hive.metastore.uris</name>
    <value>thrift://quochuy-master:9083</value>
  </property>

  <!-- Tắt kiểm tra version schema cho phát triển nhanh -->
  <property>
    <name>hive.metastore.schema.verification</name>
    <value>false</value>
  </property>

</configuration>
