<!-- Hive-site.xml for Client (Hive CLI & Spark) -->
<configuration>

  <!-- Chỉ cần khai báo Metastore URI để kết nối -->
  <property>
    <name>hive.metastore.uris</name>
    <value>thrift://quochuy-master:9083</value>
  </property>

  <!-- Thư mục Hive Warehouse giống Master -->
  <property>
    <name>hive.metastore.warehouse.dir</name>
    <value>/user/hive/warehouse</value>
  </property>

  <!-- Các cấu hình client-side tùy chọn -->
  <!-- Ví dụ: hiển thị header khi in kết quả -->
  <property>
    <name>hive.cli.print.header</name>
    <value>true</value>
  </property>

  <!-- Spark sẽ đọc file này để kết nối Metastore -->
  <property>
    <name>spark.hadoop.hive.metastore.uris</name>
    <value>thrift://quochuy-master:9083</value>
  </property>

</configuration>
